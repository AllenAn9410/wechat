<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.anx.serve.mapper.OilCostMapper">


        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="cn.anx.serve.entity.wechat.OilCost">
                    <id column="id" property="id" />
                    <result column="current_km" property="currentKm" />
                    <result column="total_oil" property="totalOil" />
                    <result column="cost" property="cost" />
                    <result column="cost_date" property="costDate" />
        </resultMap>

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultJoinMap" type="cn.anx.serve.entity.wechat.join.OilCostJoinServices">
                <id column="id" property="id" />


                <result column="current_km" property="currentKm" />
                <result column="total_oil" property="totalOil" />
                <result column="cost" property="cost" />
                <result column="cost_date" property="costDate" />

        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="BaseColumnList">
                `oil_cost`.id,
                `oil_cost`.current_km,
                `oil_cost`.total_oil,
                `oil_cost`.cost,
                `oil_cost`.cost_date
        </sql>

        <!-- 通用查询结果列 -->
        <sql id="BaseColumnListJoin">
                `oil_cost`.id,
                `oil_cost`.current_km,
                `oil_cost`.total_oil,
                `oil_cost`.cost,
                `oil_cost`.cost_date
        </sql>


    <select id="selectOilCostJoinServices" resultMap="BaseResultJoinMap">
        select
            <include refid="BaseColumnList" />
        from  oil_cost `oil_cost`
        <where>
            ${ew.sqlSegment}
        </where>
    </select>


</mapper>
